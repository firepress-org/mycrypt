# directories to encrypt by default
private/** filter=git-crypt diff=git-crypt
token/** filter=git-crypt diff=git-crypt
secrets/** filter=git-crypt diff=git-crypt
secret/** filter=git-crypt diff=git-crypt

# files to encrypt by default
**.key filter=git-crypt diff=git-crypt

# DONT encrypt by default
.gitattributes !filter !diff
.gitignore !filter !diff
Dockerfile !filter !diff
LICENSE !filter !diff
README.md !filter !diff
node_modules/** filter=git-crypt diff=git-crypt

# custom files to encrypt
